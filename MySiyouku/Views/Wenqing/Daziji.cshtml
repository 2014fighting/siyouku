            var len = msg.length;
            var seq = 0;
            var speed = 200;
            var timeId = null;
            function daziStart() {
                dazi.innerHTML = msg.substring(0, seq) + '_';
                if (seq <= len) {
                    seq++;
                    timeId = setTimeout(daziStart, speed);
                } else {
                    setTimeout(function () {
                        dazi.innerHTML = msg.substring(0, seq);
                    }, 800);
                }
            }
            daziStart();
        }
    </script>
</div>
